		<script>
			function displayf()
			{
				var x = document.getElementById("ActivateForm");
				if (x.style.display === "none") 
				{
					x.style.display = "block";
				}
				else
				{
					x.style.display = "none";
				}
			}
			
		</script>
		<script>
			function checkpass()
			{
				if (document.form.UserName.value == "MIGUELez11") && (document.form.pass.value == "prueba")
				{
					window.location.href = "/testing/NavBar.html";
				}
				
				
			}
		</script>
